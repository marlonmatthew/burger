<div class="container">

    <div class="row">

        <div class="col text-center">
            <img src="/assets/img/burger.png" />
            <h1>Burger</h1>
        </div>

    </div>

    <div class="row">

        {{#each burger_data}}
        {{#unless this.devoured}}

        <div class="col text-center">
            <pre>{{this.id}}. {{this.burger_name}}</pre>
        </div>

        <div class="col text-center">
            <form class="devour">
                <input hidden class="burger" value={{this.id}} type="text" type="hidden"><br>
                <button type="submit" class="btn btn-default">Devour Burger</button>
            </form>
        </div>

        {{/unless}}
        {{/each}}

        <div class="col text-center">

            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}">
            {{/if}}
            {{/each}}

        </div>

    </div>

    <div class="row">

        <div class="col text-center">

            <form action="/burgers/create" method="POST">
                <input type="text" class="form-control" name="burger_name">
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <p>Enter Burger</p>

        </div>

    </div>

</div>